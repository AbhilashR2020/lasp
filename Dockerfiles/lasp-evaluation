FROM ubuntu:xenial

MAINTAINER Christopher Meiklejohn <christopher.meiklejohn@gmail.com>

RUN cd /tmp && \
    apt-get update && \
    apt-get -y install wget build-essential make gcc ruby-dev git expect && \
    wget http://packages.erlang-solutions.com/erlang-solutions_1.0_all.deb && \
    dpkg -i erlang-solutions_1.0_all.deb && \
    apt-get update && \
    apt-get -y install erlang=1:18.3-1

CMD /bin/bash && cd /opt && \
    git clone https://github.com/lasp-lang/lasp.git -b unstable && \
    cd lasp && \
    make ads
